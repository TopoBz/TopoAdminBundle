{% extends base_template %}

{% block sonata_nav '' %}

{% block logo '' %}

{% block sonata_left_side '' %}

{% block body_attributes 'class="sonata-bc login-page"' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-box-body">
            {% block sonata_user_reset_form %}
                {{ form_start(form, { 'action': path('topo_admin_resetting_reset', { 'token': token }), 'attr': { 'class': 'resetting-reset-form', 'role': 'form' } }) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</button>
                {{ form_end(form) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}
