{% extends base_template %}

{% block sonata_nav '' %}

{% block logo '' %}

{% block sonata_left_side '' %}

{% block body_attributes 'class="sonata-bc login-page"' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-box-body">
            {% block sonata_user_login_form %}
                {% block sonata_user_login_error %}
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                {% endblock %}
                {{ form_start(form, { 'action': path('topo_admin_security_login_check'), 'attr': { 'class': 'login-form', 'role': 'form' } }) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                {{ form_end(form) }}

                <a href="{{ path('topo_admin_resetting_request') }}">{{ 'security.login.forgotten_password'|trans({}, 'TopoAdminBundle') }}</a>
            {% endblock %}
        </div>
    </div>
{% endblock %}
